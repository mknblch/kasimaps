                    <GridPane.margin>
                        <Insets left="5.0" />
                    </GridPane.margin>
                </CheckBox>
                <TextField fx:id="serverPasswordField" GridPane.columnIndex="2" GridPane.rowIndex="6" />
                <TextField fx:id="channelPasswordTextField" GridPane.columnIndex="2" GridPane.rowIndex="7" />


                <TextField fx:id="encryptionTextField" prefColumnCount="1" GridPane.columnIndex="2" GridPane.rowIndex="5" />

            </children>
            <columnConstraints>
                <ColumnConstraints maxWidth="143.0" minWidth="100.0" prefWidth="126.0" />
            <ColumnConstraints maxWidth="80.0" minWidth="10.0" prefWidth="17.0" />
                <ColumnConstraints maxWidth="264.0" minWidth="138.0" prefWidth="138.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>

        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="OK" />
        <ButtonType fx:constant="CANCEL" />
    </buttonTypes>
    <header>
        <Label alignment="CENTER" contentDisplay="CENTER" text="IRC Network Configuration">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
    </header>
</DialogPane>
