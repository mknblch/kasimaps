    <content>
        <GridPane alignment="TOP_CENTER" prefHeight="208.0" prefWidth="368.0">

            <children>
                <Label text="Server">
                    <padding>
                        <Insets bottom="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label text="Channel" GridPane.rowIndex="2">
                    <padding>
                        <Insets bottom="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label text="Nickname" GridPane.rowIndex="3">
                    <padding>
                        <Insets bottom="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label text="Server Password" GridPane.rowIndex="6">
                    <padding>
                        <Insets bottom="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label text="Channel Password" GridPane.rowIndex="7">
                    <padding>
                        <Insets bottom="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label text="Port" GridPane.rowIndex="1">
                    <padding>
                        <Insets bottom="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label text="TLS" GridPane.rowIndex="8">
                    <GridPane.margin>
                        <Insets />
                    </GridPane.margin>
                    <padding>
                        <Insets bottom="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label text="Encryption Password" GridPane.rowIndex="5">
                    <padding>
                        <Insets bottom="5.0" top="5.0" />
                    </padding>
                </Label>
                <TextField fx:id="serverTextField" prefColumnCount="1" GridPane.columnIndex="2" />
                <TextField fx:id="channelTextField" prefColumnCount="1" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <TextField fx:id="nickTextField" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                <TextField fx:id="portTextField" prefColumnCount="1" GridPane.columnIndex="2" GridPane.rowIndex="1" />
